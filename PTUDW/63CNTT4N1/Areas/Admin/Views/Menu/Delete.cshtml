﻿@model MyClass.Model.Menus

@{
    ViewBag.Title = "Xác nhận xóa Menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger text-uppercase">XÁC NHẬN XÓA MENU</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Trash","Menu")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Partial("Message")
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.Link)</th>
                                        <th>@Html.DisplayNameFor(model => model.TypeMenu)</th>
                                        <th>@Html.DisplayNameFor(model => model.ParentID)</th>
                                        <th>@Html.DisplayNameFor(model => model.Order)</th>
                                        <th>@Html.DisplayNameFor(model => model.CreateBy)</th>
                                        <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                                        <th>@Html.DisplayNameFor(model => model.UpdateBy)</th>
                                        <th>@Html.DisplayNameFor(model => model.UpdateAt)</th>
                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayFor(model => model.Id)</td>
                                        <td>@Html.DisplayFor(model => model.Name)</td>
                                        <td>@Html.DisplayFor(model => model.Link)</td>
                                        <td>@Html.DisplayFor(model => model.TypeMenu)</td>
                                        <td>@ViewBag.ParentMenu</td>
                                        <td>@Html.DisplayFor(model => model.Order)</td>
                                        <td>@Html.DisplayFor(model => model.CreateBy)</td>
                                        <td>@Html.DisplayFor(model => model.CreateAt)</td>
                                        <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                                        <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                                    </tr>
                                </table>
                                <div class="form-actions no-color mt-2">
                                    <button class="btn-sm btn-danger" type="submit" name="delete">Xóa <i class="fa fa-trash"></i></button>
                                </div> <!-- /.card-footer-->
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
}