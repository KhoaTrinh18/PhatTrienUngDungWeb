﻿@model MyClass.Model.Topics

@{
    ViewBag.Title = "Xác nhận xóa chủ đề";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">XÁC NHẬN XÓA CHỦ ĐỀ</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Trash","Topic")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @*Hien thi noi dung thong bao ngay ben tren bang du lieu*@
                        @Html.Partial("Message")
                        <table class="table table-bordered table-striped" id="myTable">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                    <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Order)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreateBy)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                                    <th>@Html.DisplayNameFor(model => model.UpdateBy)</th>
                                    <th>@Html.DisplayNameFor(model => model.UpdateAt)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                    <td>@Html.DisplayFor(model => model.Slug)</td>
                                    <td>@ViewBag.ParentTop</td>
                                    <td>@Html.DisplayFor(model => model.Order)</td>
                                    <td>@Html.DisplayFor(model => model.CreateBy)</td>
                                    <td>@Html.DisplayFor(model => model.CreateAt)</td>
                                    <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                                    <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-actions no-color mt-2">
                            <button class="btn-sm btn-danger" type="submit" name="delete">Xóa <i class="fa fa-trash"></i></button>
                        </div> <!-- /.card-footer-->
                    </div><!-- /.card-body -->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div>
}